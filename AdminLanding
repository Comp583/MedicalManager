  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const calendarEl = document.getElementById('calendar');
      const calendar = new FullCalendar.Calendar(calendarEl, {
        initialView: 'dayGridMonth',
        height: 500,
        eventDidMount: function(info) {
          const tooltip = document.createElement('div');
          tooltip.innerText = info.event.title;
          tooltip.style.position = 'absolute';
          tooltip.style.backgroundColor = '#fff';
          tooltip.style.border = '1px solid #ccc';
          tooltip.style.padding = '5px';
          tooltip.style.boxShadow = '0 2px 5px rgba(0,0,0,0.1)';
          tooltip.style.zIndex = 9999;
          tooltip.style.opacity = 1;
          tooltip.classList.add('fc-tooltip');

          info.el.addEventListener('mouseenter', function (e) {
            document.body.appendChild(tooltip);
            tooltip.style.top = e.pageY + 10 + 'px';
            tooltip.style.left = e.pageX + 10 + 'px';
          });

          info.el.addEventListener('mousemove', function (e) {
            tooltip.style.top = e.pageY + 10 + 'px';
            tooltip.style.left = e.pageX + 10 + 'px';
          });

          info.el.addEventListener('mouseleave', function () {
            tooltip.remove();
          });
        },
        events: [
          {
            title: 'John Doe - Eye Exam - 2:30 PM',
            start: new Date().toISOString().split('T')[0]
          },
          {
            title: 'Jane Smith - Contact Lens Fitting - 3:00 PM',
            start: new Date(new Date().setDate(new Date().getDate() + 1)).toISOString().split('T')[0]
          },
          {
            title: 'Robert Johnson - Vision Test - 3:15 PM',
            start: new Date(new Date().setDate(new Date().getDate() + 1)).toISOString().split('T')[0]
          }
        ]
      });
      calendar.render();

      // Action buttons popup alerts -tmeps
      document.getElementById('createDrBtn').addEventListener('click', function() {
        alert('This would open a Create Dr popup form');
      });
      document.getElementById('editDrBtn').addEventListener('click', function() {
        alert('This would open an Edit Dr popup form');
      });
      document.getElementById('removeDrBtn').addEventListener('click', function() {
        alert('This would open a Remove Dr popup form');
      });
    });
  </script>
